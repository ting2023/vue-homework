{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "module": "es2022",
    "moduleResolution": "node",
    "target": "es2022",
    "types": ["vite/client"]
  },
  "include": [
    "src/**/**/*.ts",
    "src/**/*.ts",
    "src/**/*.vue",
    "auto-imports.d.ts"
  ],
  "exclude": ["node_modules"]
}